{
	"name": "my-device-off",
	"actions": [
        {
            "every": {
                "specific": {
                    "time": {
                        "hour": 20,
                        "minute": 0
                    }
                },
                "actions": [
                    {
                        "command": {
                            "devices": [ "my-device" ],
                            "commands": [ {
                                "component": "main",
                                "capability": "switch",
                                "command": "off"
                            }]
                        }
                    }
                ]
            }
        }
    ]
}