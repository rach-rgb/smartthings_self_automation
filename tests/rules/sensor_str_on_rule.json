{
  "name": "my-device-my-sensor-on",
  "actions": [
    {
      "if": {
        "equals": {
          "left": {
            "device": {
              "devices": [
                "my-sensor"
              ],
              "capability": "sensor",
              "attribute": "motion"
            }
          },
          "right": {
            "string": "active"
          }
        },
        "then": [
          {
            "command": {
              "devices": [
                "my-device"
              ],
              "commands": [
                {
                  "capability": "switch",
                  "command": "on"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}