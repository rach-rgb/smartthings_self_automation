{
  "name": "my-device-my-sensor-off",
  "actions": [
    {
      "if": {
        "less_than": {
          "right": {
            "device": {
              "devices": [
                "my-sensor"
              ],
              "attribute": "temperature"
            }
          },
          "left": {
            "integer": 80
          }
        },
        "then": [
          {
            "command": {
              "devices": [
                "my-device"
              ],
              "commands": [
                {
                  "capability": "switch",
                  "command": "off"
                }
              ]
            }
          }
        ]
      }
    }
  ]
}